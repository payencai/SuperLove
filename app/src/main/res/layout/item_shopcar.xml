<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:paddingLeft="12dp"
    android:paddingTop="15dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_home_white8"
        android:layout_width="match_parent"
        android:layout_height="108dp">
        <ImageView
            android:src="@mipmap/sl_shopcar_choose"
            android:layout_width="18dp"
            android:layout_height="18dp" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/sl_shopcar_goods"
            android:layout_width="88dp"
            android:layout_height="88dp" />
        <RelativeLayout
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/color_333"
                    android:text="小熊烤面包机多功能早餐机小型多士全自动吐司机"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="3dp"

                    android:textSize="12sp"
                    android:textColor="#b5b5b5"
                    android:text="300ML 红色"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <FrameLayout

                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="￥"
                            android:textColor="@color/color_red"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:text="168.8"
                            android:textColor="@color/color_red"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_marginBottom="1dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="￥218.80"
                        android:textColor="#979797"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout

                    android:layout_gravity="right"
                    android:background="@drawable/shape_shopcar_b5"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp">
                    <RelativeLayout
                        android:layout_width="22dp"
                        android:layout_height="22dp">
                        <View
                            android:layout_centerInParent="true"
                            android:background="#b5b5b5"
                            android:layout_width="8dp"
                            android:layout_height="2dp" />
                    </RelativeLayout>
                    <View
                        android:background="#b5b5b5"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"></View>
                    <TextView
                        android:minWidth="32dp"
                        android:maxWidth="50dp"
                        android:paddingRight="12dp"
                        android:paddingLeft="13dp"
                        android:text="123"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <View
                        android:background="#b5b5b5"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"></View>
                    <RelativeLayout
                        android:layout_width="22dp"
                        android:layout_height="22dp">
                        <TextView
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="16sp"
                            android:textColor="@color/color_333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>