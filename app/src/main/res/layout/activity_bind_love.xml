<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.login.LoginActivity">
    <ImageView
        android:padding="15dp"

        android:src="@mipmap/sl_grey_back"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <LinearLayout

        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:textColor="@color/color_333"
            android:textStyle="bold"
            android:text="爱无价账号绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginRight="22dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_login_f5"
            android:gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <LinearLayout
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/sl_login_phone"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <EditText
                    android:layout_margin="5dp"
                    android:background="@color/color_f5"
                    android:textSize="16sp"
                    android:textColorHint="#b5b5b5"
                    android:textColor="@color/color_333"
                    android:hint="请输入富迪ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <ImageView
                android:visibility="gone"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/sl_phone_del"
                android:layout_width="22dp"
                android:layout_height="22dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="22dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_login_f5"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <LinearLayout
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/sl_login_pwd"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <EditText
                    android:layout_margin="5dp"
                    android:background="@color/color_f5"
                    android:textSize="16sp"
                    android:textColorHint="#b5b5b5"
                    android:textColor="@color/color_333"
                    android:hint="请输入密码"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/sl_hide"
                android:layout_width="22dp"
                android:layout_height="22dp" />
        </RelativeLayout>

        <com.coorchice.library.SuperTextView
            android:textColor="@color/white"
            app:stv_solid="#FFFE3F49"
            app:stv_corner="22dp"
            android:text="确定绑定"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_width="match_parent"
            android:layout_height="42dp" />





    </LinearLayout>

</LinearLayout>