<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.home.ShareGoodsActivity">
    <RelativeLayout

        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="15dp"
            android:src="@mipmap/sl_black_back"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/color_333"
            android:text="商品分享"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@drawable/shape_home_f5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13sp"
            android:textColor="@color/color_333"
            android:text="小熊烤面包机家用片多功能早餐机小型多士炉土司机全自动吐司多功能全自动早餐机"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/color_333"
            android:text="【在售价】￥198"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/color_333"
            android:text="【券后价】￥138"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/color_333"
            android:text="Plus会员再返￥10.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/color_333"
            android:text="【下载地址】http://a.app.qq.com/o/simple.jsp?pkgname=com.n_add.android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/color_333"
            android:text="分享图片"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/color_6e"
            android:text="（已选择1张图片）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_photos"
        android:layout_marginLeft="15dp"
        tools:listitem="@layout/item_share_photo"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </android.support.v7.widget.RecyclerView>
    
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:background="@drawable/shape_share_copy"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <ImageView
            android:src="@mipmap/sl_share_copy"
            android:layout_width="19dp"
            android:layout_height="19dp" />
        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="复制【淘口令】"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_name"
                    android:background="#d2d2d2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>
                <TextView
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tv_name"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:textColor="@color/color_333"
                    android:text="分享商品到"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View

                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_name"
                    android:background="#d2d2d2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>
            </RelativeLayout>
            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/sl_share_save"
                            android:layout_width="48dp"
                            android:layout_height="48dp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_333"
                            android:textSize="12sp"
                            android:text="保存图片"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="35dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/sl_share_wechat"
                            android:layout_width="48dp"
                            android:layout_height="48dp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_333"
                            android:textSize="12sp"
                            android:text="微信好友"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginLeft="35dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/sl_share_circle"
                            android:layout_width="48dp"
                            android:layout_height="48dp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_333"
                            android:textSize="12sp"
                            android:text="朋友圈"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginLeft="35dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/sl_share_qq"
                            android:layout_width="48dp"
                            android:layout_height="48dp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_333"
                            android:textSize="12sp"
                            android:text="QQ好友"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout

                        android:gravity="center"
                        android:layout_marginLeft="35dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/sl_share_zone"
                            android:layout_width="48dp"
                            android:layout_height="48dp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_333"
                            android:textSize="12sp"
                            android:text="QQ空间"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/sl_share_blog"
                            android:layout_width="48dp"
                            android:layout_height="48dp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_333"
                            android:textSize="12sp"
                            android:text="微博"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>