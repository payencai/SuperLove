<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_logo"
            android:src="@mipmap/sl_category_tianmao"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_toRightOf="@id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_toLeftOf="@id/rl_right"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/color_333"
                        android:text="超级爱无价"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#979797"
                        android:text="昨天 18:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:lineSpacingExtra="5dp"
                        android:textColor="@color/color_333"
                        android:textSize="15sp"
                        android:text="新款宽松韩版牛仔裤
出游必备的好物~
优质洗水牛仔料，手感细腻
券后仅需￥69.8
小仙女们赶快入手吧!"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView


                            android:textSize="14sp"
                            android:textColor="#FFFE3F49"
                            android:text="查看详情"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/sl_red_double"
                            android:layout_width="11dp"
                            android:layout_height="11dp" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"

                    android:layout_alignParentRight="true"
                    android:id="@+id/rl_right"
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout

                        android:background="@drawable/shape_college_share"
                        android:layout_width="64dp"
                        android:layout_height="64dp">
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/sl_college_share"
                                android:layout_width="25dp"
                                android:layout_height="22dp" />
                            <TextView
                                android:textSize="11sp"
                                android:textColor="@color/white"
                                android:text="分享"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:background="@color/white"
                                android:layout_width="38dp"
                                android:layout_height="0.5dp"></View>
                            <TextView
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:text="123456"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                    <com.coorchice.library.SuperTextView
                        android:text="分享赚:￥2.25"
                        app:stv_corner="11dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        app:stv_solid="#f5f5f5"
                        android:textColor="#FFFE3F49"
                        android:layout_width="90dp"
                        android:layout_height="22dp" />
                </LinearLayout>
            </RelativeLayout>
            <com.jaeger.ninegridimageview.NineGridImageView
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/ngiv_photo"
                android:layout_width="match_parent"
                app:imgGap="10dp"
                app:showStyle="fill"
                app:singleImgSize="120dp"/>
        </LinearLayout>



        
    </LinearLayout>

</LinearLayout>