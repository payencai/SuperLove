<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_home_white8"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/sl_kill_good1"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:textSize="11sp"
                android:background="@drawable/shape_good_yellow3"
                android:textColor="@color/color_333"
                android:text="自营"
                android:layout_width="30dp"
                android:layout_height="16dp" />
            <TextView
                android:textColor="@color/color_333"
                android:textStyle="bold"
                android:textSize="14sp"

                android:text="          便携创意杯子透明简约花茶杯耐热玻璃杯随手杯"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="16dp">
            <ImageView

                android:src="@mipmap/sl_good_thing"
                android:layout_width="65dp"
                android:layout_height="16dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="#bababa"
                android:textSize="14sp"
                android:text="￥14.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="￥"
                android:textColor="@color/color_red"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="168.8"
                android:textColor="@color/color_red"
                android:textSize="20sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="3dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:paddingRight="5dp"
                    android:background="@drawable/shape_goods_plus"
                    android:textColor="#FFF5DDAE"
                    android:text="PLUS会员"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingRight="3dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:background="@drawable/shape_goods_money"
                    android:textColor="#FF3E3D46"
                    android:text="赚￥32.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_alignParentRight="true"

                android:gravity="center"
                android:textSize="14sp"
                android:paddingRight="5dp"
                android:background="@drawable/shape_good_red14"
                android:textColor="#FFF5DDAE"
                android:text="马上抢"
                android:layout_width="70dp"
                android:layout_height="30dp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>