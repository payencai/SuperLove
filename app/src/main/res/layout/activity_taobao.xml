<?xml version="1.0" encoding="utf-8"?>
<com.love.novalue.widget.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.category.TaobaoActivity">
    <LinearLayout
        android:background="#f5f5f5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@mipmap/sl_bg_taobao"
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <ImageView
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:src="@mipmap/sl_white_back"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/sl_taobao_word"
                    android:layout_width="175dp"
                    android:layout_height="25dp" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="淘宝/天猫"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@drawable/shape_search_white"
                android:layout_marginTop="10dp"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="23dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/sl_home_search"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <EditText
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:hint="复制标题：搜索淘宝天猫拼多多京东优惠券"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:text="① 打开淘宝/天猫     ②复制宝贝标题     ③ 打开爱无价商场"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:background="#c4c4c4"
                    android:layout_width="30dp"
                    android:layout_height="1dp"></View>
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_red"
                    android:textSize="17sp"
                    android:text="猜你喜欢"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#c4c4c4"
                    android:layout_width="30dp"
                    android:layout_height="1dp"></View>
            </LinearLayout>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            tools:itemCount="1"
            android:id="@+id/rv_goods"
            tools:listitem="@layout/item_taobao_like"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</com.love.novalue.widget.CustomScrollView>