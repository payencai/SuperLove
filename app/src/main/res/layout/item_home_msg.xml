<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="15dp"

    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/sl_time_msg"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_6e"
            android:textSize="13sp"
            android:text="08/03 16:54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="5dp"
            android:background="#FFD2D2D2"
            android:layout_width="1dp"
            android:layout_height="match_parent">

        </View>
        <LinearLayout

            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:background="@drawable/shape_home_white8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/color_333"
                android:text="请寄回退货商品"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="#FFD2D2D2"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </View>
            <TextView
                android:layout_marginRight="5dp"
                android:lineSpacingExtra="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/color_6e"
                android:text="您的退货申请已通过，请将退货商品寄至：河南省郑州市航海东路1662号中孚特种铝材物流园五号库，退货组收，电话：400-123-8888。请在包裹中附商品定单号，不要使用平邮或到付，否则将无法及时为您办理退款。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/color_333"
                    android:text="点击查看退款进度"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/sl_msg_double"
                    android:layout_width="11dp"
                    android:layout_height="11dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>