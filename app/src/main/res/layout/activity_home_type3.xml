<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".ui.home.HomeType1Activity">
    <View
        android:background="@mipmap/sl_type3_bg"
        android:layout_width="match_parent"
        android:layout_height="220dp"></View>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="15dp"
            android:src="@mipmap/sl_white_back"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="每日一鲜"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout

        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="新鲜直采 品种丰富 安全保障"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tab_order"
            app:tl_indicator_corner_radius="3dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00000000"
            app:tl_indicator_color="#FFC3EA69"
            app:tl_indicator_height="3dp"
            app:tl_indicator_width="26dp"
            app:tl_tab_space_equal="false"
            app:tl_textBold="SELECT"
            app:tl_textSelectColor="@color/white"
            app:tl_textUnselectColor="#80ffffff"
            app:tl_textsize="15sp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_order"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_home_f5"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"

            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>