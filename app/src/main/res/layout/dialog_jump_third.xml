<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/sl_jump_bg"
        android:layout_width="match_parent"
        android:layout_height="105dp">
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="正在跳转淘宝"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="15dp"
                android:src="@mipmap/sl_app_logo"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <com.github.nikartm.support.StripedProcessButton
                android:id="@+id/strip"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:clickable="false"
                android:focusable="true"
                android:text=""
                app:spb_cornerRadius="8"
                tools:spb_showStripes="true"
                app:spb_loadingText=""
                app:spb_stripeGradient="false"
                app:spb_stripeWidth="5dp"
                app:spb_stripeTilt="15"
                app:spb_background="#888888"
                app:spb_mainStripColor="#FFCD48"
                app:spb_subStripeColor="#FFB400"
                app:spb_stripeDuration="120"
                android:textColor="#ffffff" />
            <ImageView
                android:layout_marginLeft="15dp"
                android:src="@mipmap/sl_app_logo"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/sl_back_money"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_333"
                    android:textSize="14sp"
                    android:text="返佣"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginLeft="15dp"
                    android:background="@color/color_6e"
                    android:layout_width="10dp"
                    android:layout_height="1dp"></View>
                <View
                    android:layout_marginLeft="5dp"
                    android:background="@color/color_6e"
                    android:layout_width="10dp"
                    android:layout_height="1dp"></View>
                <View
                    android:layout_marginLeft="5dp"
                    android:background="@color/color_6e"
                    android:layout_width="10dp"
                    android:layout_height="1dp"></View>
                <View
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/color_6e"
                    android:layout_width="10dp"
                    android:layout_height="1dp"></View>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_333"
                    android:textSize="14sp"
                    android:text="￥12.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/sl_quan_money"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_333"
                    android:textSize="14sp"
                    android:text="领券"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginLeft="15dp"
                    android:background="@color/color_6e"
                    android:layout_width="10dp"
                    android:layout_height="1dp"></View>
                <View
                    android:layout_marginLeft="5dp"
                    android:background="@color/color_6e"
                    android:layout_width="10dp"
                    android:layout_height="1dp"></View>
                <View
                    android:layout_marginLeft="5dp"
                    android:background="@color/color_6e"
                    android:layout_width="10dp"
                    android:layout_height="1dp"></View>
                <View
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/color_6e"
                    android:layout_width="10dp"
                    android:layout_height="1dp"></View>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_333"
                    android:textSize="14sp"
                    android:text="￥12.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            android:background="#f5f5f5"
            android:layout_width="180dp"
            android:layout_height="1dp"></View>
        <TextView
            android:textSize="18sp"
            android:textColor="#F92732"
            android:gravity="center"
            android:text="可省￥62.8"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_circle_black"
        android:layout_width="44dp"
        android:layout_height="44dp">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/sl_dialog_whiteclose"
            android:layout_width="17dp"
            android:layout_height="17dp" />
    </RelativeLayout>
    
</LinearLayout>