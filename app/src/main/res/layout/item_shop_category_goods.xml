<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_photo"
            android:src="@drawable/sl_kill_good1"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <RelativeLayout
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_name"
                android:textColor="@color/color_333"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="小米 米家8公斤变频滚筒洗烘一体全自动洗衣机…."
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_below="@id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="3dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:paddingRight="5dp"
                    android:background="@drawable/shape_goods_plus"
                    android:textColor="#FFF5DDAE"
                    android:text="PLUS会员"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_get"
                    android:paddingRight="3dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:background="@drawable/shape_goods_money"
                    android:textColor="#FF3E3D46"
                    android:text="赚￥32.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <FrameLayout
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="￥"
                            android:textColor="@color/color_red"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/tv_real_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:text="168.8"
                            android:textColor="@color/color_red"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView

                        android:id="@+id/tv_cheap_price"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="￥218.80"
                        android:textColor="#979797"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout

                    android:gravity="bottom"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_sale"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#979797"
                        android:text="已售22150"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </FrameLayout>


        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</LinearLayout>