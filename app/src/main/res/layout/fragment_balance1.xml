<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mine.Balance1Fragment">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/ll_time"
            android:gravity="center_vertical"
            android:background="@drawable/shape_balance_f2"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="28dp">
            <TextView
                android:id="@+id/tv_time"
                android:textSize="14sp"
                android:textColor="@color/color_333"
                android:layout_marginLeft="10dp"
                android:text="2019-08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/sl_black_down"
                android:layout_width="9dp"
                android:layout_height="7dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:gravity="bottom"

            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="28dp">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/color_333"
                android:layout_marginLeft="10dp"
                android:text="总收益:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textColor="#FFD5A757"
                android:text="￥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_money"
                android:textSize="21sp"
                android:textColor="#FFD5A757"
                android:text="18.88"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_balance"
        android:background="@color/white"
        tools:listitem="@layout/item_balance_total"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>