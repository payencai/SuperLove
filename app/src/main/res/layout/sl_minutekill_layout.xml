<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <View
            android:background="@color/color_red"
            android:layout_width="4dp"
            android:layout_height="19dp"></View>
        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_miaosha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="限时秒杀"
            android:textColor="@color/color_kill"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_miaosha_shi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_miaosha_time"
                android:gravity="center"
                android:text="12"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:textColor="@color/color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text=":" />

            <TextView
                android:id="@+id/tv_miaosha_minter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_miaosha_time"
                android:gravity="center"
                android:text="12"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/color_red"
                android:text=":" />

            <TextView
                android:id="@+id/tv_miaosha_second"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_miaosha_time"
                android:gravity="center"
                android:text="10"
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
