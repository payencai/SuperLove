<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.login.LoginActivity">
    <ImageView
        android:padding="15dp"

        android:src="@mipmap/sl_grey_back"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_above="@id/ll_bottom"
        android:orientation="vertical"
        android:layout_marginTop="50dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/color_333"
            android:textStyle="bold"
            android:text="手机号登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginRight="22dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_login_f5"
            android:gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <LinearLayout
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/sl_login_phone"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <EditText
                    android:layout_margin="5dp"
                    android:background="@color/color_f5"
                    android:textSize="16sp"
                    android:textColorHint="#b5b5b5"
                    android:textColor="@color/color_333"
                    android:hint="请输入手机号"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/sl_phone_del"
                android:layout_width="22dp"
                android:layout_height="22dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="22dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_login_f5"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <LinearLayout
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/sl_login_pwd"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <EditText
                    android:layout_margin="5dp"
                    android:background="@color/color_f5"
                    android:textSize="16sp"
                    android:textColorHint="#b5b5b5"
                    android:textColor="@color/color_333"
                    android:hint="请输入密码"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/sl_hide"
                android:layout_width="22dp"
                android:layout_height="22dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="22dp"
            android:layout_marginLeft="45dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/color_6e"
                android:text="忘记密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="#FF348AFF"
                android:text="注册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <com.coorchice.library.SuperTextView
            android:textColor="@color/white"
            app:stv_solid="#FFFF9DA2"
            app:stv_corner="22dp"
            android:text="登录"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_width="match_parent"
            android:layout_height="42dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="80dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_6e"
                    android:text="其他登录方式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/sl_login_logo1"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:layout_marginTop="2dp"
                            android:textColor="@color/color_333"
                            android:textSize="12sp"
                            android:text="爱无价"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="28dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/sl_login_logo2"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:layout_marginTop="2dp"
                            android:textColor="@color/color_333"
                            android:textSize="12sp"
                            android:text="肽精彩"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginLeft="28dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/sl_login_logo3"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:layout_marginTop="2dp"
                            android:textColor="@color/color_333"
                            android:textSize="12sp"
                            android:text="MTI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginLeft="28dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/sl_login_logo4"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:layout_marginTop="2dp"
                            android:textColor="@color/color_333"
                            android:textSize="12sp"
                            android:text="双创新零售"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>




    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:textSize="12sp"
            android:textColor="@color/color_333"
            android:text=" 注册或登录代表同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="#FF348AFF"
                android:text="《用户协议》"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_333"
                android:text="及"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:textColor="#FF348AFF"
                android:text="《隐私政策》 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>