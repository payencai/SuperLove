<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_home_white8"
    android:layout_width="wrap_content"

    android:gravity="center_horizontal"

    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/sl_kill_good1"
        android:layout_width="110dp"
        android:layout_height="110dp" />
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="110dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_333"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="网红个性简约创意潮流小巧杯子瓶"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="3dp"
                android:gravity="center"
                android:textSize="10sp"
                android:paddingRight="5dp"
                android:background="@drawable/shape_goods_plus"
                android:textColor="#FFF5DDAE"
                android:text="PLUS会员"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingRight="3dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:textSize="10sp"
                android:background="@drawable/shape_goods_money"
                android:textColor="#FF3E3D46"
                android:text="赚￥32.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="￥"
                        android:textColor="@color/color_red"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="168.8"
                        android:textColor="@color/color_red"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="￥2139.99"
                    android:textColor="#979797"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>