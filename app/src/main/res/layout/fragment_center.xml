<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.center.CenterFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@mipmap/sl_center_bg"
                        android:layout_width="match_parent"
                        android:layout_height="215dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="34dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="55dp"
                                android:src="@mipmap/sl_default_head"
                                android:layout_height="55dp" />
                            <LinearLayout
                                android:layout_marginLeft="11dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:text="时尚N小姐"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <LinearLayout
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <com.coorchice.library.SuperTextView
                                        android:text="粉丝"
                                        android:gravity="center"
                                        app:stv_corner="9dp"
                                        android:textSize="11sp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        app:stv_solid="@color/white"
                                        android:textColor="#FF6E6E6E"
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/sl_plus_user"
                        android:layout_marginTop="120dp"
                        android:layout_width="match_parent"
                        android:layout_height="340dp" />


                </FrameLayout>
                <LinearLayout
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_home_white8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.coorchice.library.SuperTextView
                            app:stv_solid="@color/color_red"
                            android:layout_width="15dp"
                            app:stv_corner="3dp"
                            android:layout_height="3dp" />
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#FF151515"
                            android:textSize="18sp"
                            android:text="Plus会员升级规则"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.coorchice.library.SuperTextView
                            app:stv_solid="@color/color_red"
                            android:layout_width="15dp"
                            app:stv_corner="3dp"
                            android:layout_height="3dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="7dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#FF6E6E6E"
                            android:textSize="12sp"
                            android:text="距离下一个等级"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.coorchice.library.SuperTextView
                            android:layout_width="wrap_content"
                            android:text="达人"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_333"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <com.love.novalue.widget.MyStepView
                        android:id="@+id/step_view"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                      />
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/color_333"
                            android:text="再邀请 "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/color_red"
                            android:text="18 "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="个好友加入，即可成为达人！"
                            android:textSize="13sp"
                            android:textColor="@color/color_333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <com.coorchice.library.SuperTextView
                        android:layout_width="180dp"
                        app:stv_corner="20dp"
                        android:text="立即邀请"
                        android:id="@+id/tv_invate"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:stv_solid="@color/color_red"
                        android:layout_height="35dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tv_goods"
                        android:id="@+id/iv_queen1"
                        android:src="@mipmap/sl_shop_queen"
                        android:layout_width="19dp"
                        android:layout_height="17dp" />
                    <TextView
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tv_goods"
                        android:layout_centerInParent="true"
                        android:textColor="#FFE6C281"
                        android:textSize="20sp"
                        android:text="优选商品"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_goods"
                        android:id="@+id/iv_queen2"
                        android:src="@mipmap/sl_shop_queen"
                        android:layout_width="19dp"
                        android:layout_height="17dp" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    tools:listitem="@layout/item_shop_goods"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>