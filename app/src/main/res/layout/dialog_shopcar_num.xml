<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_pay_method"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="430dp">
       <LinearLayout
           android:layout_marginLeft="15dp"
           android:layout_marginTop="15dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/iv_photo"
               android:src="@drawable/sl_shop_good7"
               android:layout_width="96dp"
               android:layout_height="96dp" />
           <RelativeLayout
               android:paddingLeft="10dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/iv_close"
                   android:layout_marginRight="15dp"
                   android:layout_alignParentRight="true"
                   android:src="@mipmap/sl_dialog_close"
                   android:layout_width="16dp"
                   android:layout_height="16dp" />
               <LinearLayout
                   android:layout_alignParentBottom="true"
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:gravity="bottom"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <LinearLayout

                           android:layout_marginTop="5dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:text="￥"
                               android:textColor="@color/color_red"
                               android:textSize="14sp" />
                           <TextView
                               android:id="@+id/tv_price1"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:text="168.8"
                               android:textColor="@color/color_red"
                               android:textSize="22sp" />
                       </LinearLayout>
                       <TextView
                           android:id="@+id/tv_price2"
                           android:layout_marginBottom="2dp"
                           android:layout_marginLeft="5dp"
                           android:textColor="#bababa"
                           android:textSize="14sp"
                           android:text="￥14.8"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>
                   <TextView
                       android:id="@+id/tv_sale_num"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="5dp"
                       android:textColor="#bababa"
                       android:textSize="13sp"
                       android:text="库存2039"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

               </LinearLayout>
           </RelativeLayout>
       </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="#F0F0F0"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:divider="@color/white"
                android:id="@+id/listview"
                android:layout_above="@id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/color_333"
                        android:textSize="14sp"
                        android:text="数量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:background="@drawable/shape_shopcar_b5"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp">
                        <RelativeLayout
                            android:id="@+id/rl_div"
                            android:layout_width="26dp"
                            android:layout_height="26dp">
                            <ImageView
                                android:layout_centerInParent="true"
                                 android:src="@mipmap/sl_num_div"
                                android:layout_width="12dp"
                                android:layout_height="12dp" />
                        </RelativeLayout>
                        <View
                            android:background="#b5b5b5"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"></View>
                        <TextView
                            android:id="@+id/tv_num"
                            android:minWidth="41dp"
                            android:maxWidth="50dp"
                            android:paddingRight="12dp"
                            android:paddingLeft="13dp"
                            android:text="1"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <View
                            android:background="#b5b5b5"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"></View>
                        <RelativeLayout
                            android:id="@+id/rl_add"
                            android:layout_width="26dp"
                            android:layout_height="26dp">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:src="@mipmap/sl_num_add"
                                android:layout_width="12dp"
                                android:layout_height="12dp" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <View

                    android:background="#F0F0F0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>
                <com.coorchice.library.SuperTextView
                    app:stv_corner="20dp"
                    android:id="@+id/tv_confirm"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:text="确定"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    app:stv_solid="@color/color_red4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>